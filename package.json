{
    "name": "sds",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:WesleyLuk90/sds.git",
    "author": "Wesley Luk <wesleyluk@gmail.com>",
    "license": "MIT",
    "scripts": {
        "dev": "opn http://localhost:3000 && ts-node server/src/dev-index.ts",
        "dev:server": "ts-node server/src/dev-index.ts --no-webpack",
        "build": "yarn generate && yarn build:client && yarn build:server && yarn test",
        "build:client": "tsc -p client/tsconfig.json && webpack --config client/webpack.config.js",
        "build:server": "tsc -p server/tsconfig.json",
        "start:server": "node server/dist/index.js",
        "test": "yarn test:server",
        "test:server": "jest -c server/jest.config.js",
        "generate": "yarn generate:schema && yarn generate:typedefs",
        "generate:schema": "ts-node server/src/makeSchema.ts",
        "generate:typedefs": "apollo client:codegen --config apollo.config.js --target typescript --globalTypesFile=client/src/__generated__/globalTypes.ts"
    },
    "dependencies": {
        "@elastic/elasticsearch": "^0.1.0-beta.2",
        "@material-ui/core": "^3.9.3",
        "axios": "^0.18.0",
        "express": "^4.16.4",
        "express-graphql": "^0.7.1",
        "graphql": "^14.2.0",
        "normalize.css": "^8.0.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-jss": "^8.6.1",
        "react-router": "^5.0.0",
        "react-router-dom": "^5.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/express-graphql": "^0.6.2",
        "@types/graphql": "^14.2.0",
        "@types/jest": "^24.0.11",
        "@types/react": "^16.8.10",
        "@types/react-dom": "^16.8.3",
        "@types/react-jss": "^8.6.3",
        "@types/react-router": "^4.4.5",
        "@types/react-router-dom": "^4.3.1",
        "@types/webpack": "^4.4.26",
        "@types/webpack-dev-middleware": "^2.0.2",
        "@types/webpack-hot-middleware": "^2.16.5",
        "apollo": "^2.6.2",
        "awesome-typescript-loader": "^5.2.1",
        "css-loader": "^2.1.1",
        "css-modules-typescript-loader": "^1.1.1",
        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.5.0",
        "opn-cli": "^4.0.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "ts-jest": "^24.0.1",
        "ts-node": "^8.0.3",
        "typescript": "^3.4.1",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0",
        "webpack-dev-middleware": "^3.6.1",
        "webpack-hot-middleware": "^2.24.3"
    },
